generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Power {
  id        Int     @id @default(autoincrement())
  name      String
  dangeorus Boolean
  heroes    Hero[]  @relation("HeroPowers")
}

model Hero {
  id     Int     @id @default(autoincrement())
  name   String
  city   String
  powers Power[] @relation("HeroPowers")
}
